{
  "[dart]": {
    // https://dartcode.org/docs/recommended-settings/
    "editor.rulers": [80],
    "editor.formatOnSave": true,
    "editor.formatOnType": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.rulers": [100],
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 100
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml",
    "files.insertFinalNewline": true
  },
  "cSpell.words": [
    "autovalidate",
    "cupertino",
    "Cupertino",
    "dtos",
    "Dtos",
    "emma",
    "flaticon",
    "Flaticon",
    "Flurl",
    "hcloud",
    "keycloak",
    "Keycloak",
    "Mapperly",
    "MediatR",
    "Npgsql",
    "oidc",
    "Oidc",
    "opencleanenergy",
    "openems",
    "Postgre",
    "postgres",
    "rabbitmq",
    "Relayout",
    "Riok",
    "trid",
    "uicons",
    "Uicons",
    "validatable",
    "vhost",
    "Vogen"
  ]
}
