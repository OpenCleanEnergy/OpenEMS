{
  "realm": "emma",
  "enabled": true,
  "registrationAllowed": true,
  "registrationEmailAsUsername": true,
  "resetPasswordAllowed": true,
  "verifyEmail": true,
  "internationalizationEnabled": true,
  "supportedLocales": ["de", "en"],
  "defaultLocale": "de",
  "smtpServer": {
    "from": "{{KC_SMTP_FROM}}",
    "fromDisplayName": "EMMA Team",
    "replyTo": "",
    "replyToDisplayName": "",
    "envelopeFrom": "",
    "host": "{{KC_SMTP_HOST}}",
    "port": "587",
    "starttls": "true",
    "ssl": "false",
    "auth": "true",
    "user": "{{KC_SMTP_USER}}",
    "password": "{{KC_SMTP_PASSWORD}}"
  },
  "clients": [
    {
      "clientId": "emma_app",
      "name": "EMMA native app",
      "enabled": true,
      "protocol": "openid-connect",
      "publicClient": true,
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "redirectUris": [
        "org.opence.emma:/oauth2redirect",
        "https://emma.opence.org/*",
        "http://localhost*"
      ],
      "attributes": {
        "post.logout.redirect.uris": "org.opence.emma:/endsessionredirect##https://emma.opence.org/*##http://localhost*##"
      },
      "webOrigins": ["*"],
      "defaultClientScopes": [
        "web-origins",
        "acr",
        "profile",
        "roles",
        "email"
      ],
      "optionalClientScopes": [
        "address",
        "phone",
        "offline_access",
        "microprofile-jwt"
      ]
    }
  ]
}
